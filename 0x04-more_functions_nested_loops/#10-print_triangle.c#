#include "holberton.h"

/**
 * print_triangle - print traingle with #'s with given size
 * @size: size of triangleprint_triangle - print traingle with #'s with given size
 * @size: size of triangle
 */

void print_triangle(int size)
{
  int a;
  int b;
  int tri;

  if (size <= 0)
    {
      _putchar('\n');
    }

  for (a = 1; a <= size; a++)
    {
      for (b = 1; b <= (size - a); b++)
	_putchar(' ');

      for (tri = 1; tri <= a; tri++)
	_putchar('#');

      _putchar('\n');
    }
}
